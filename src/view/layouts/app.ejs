<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Royal Wedding by Ully Sjah - Luxury Wedding Planner' %></title>
    <meta name="description" content="<%= typeof description !== 'undefined' ? description : 'Wedding planner profesional dengan pengalaman 10+ tahun. Mewujudkan pernikahan impian Anda dengan sentuhan kemewahan dan keanggunan.' %>">
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/assets/css/style.css">
    
    <!-- Tailwind Config -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        'playfair': ['Playfair Display', 'serif'],
                        'montserrat': ['Montserrat', 'sans-serif'],
                    },
                    colors: {
                        'navy': {
                            50: '#f0f1f7',
                            100: '#e2e4ef',
                            200: '#c5c9df',
                            300: '#a8aecf',
                            400: '#8b93bf',
                            500: '#6e78af',
                            600: '#5a6399',
                            700: '#474e83',
                            800: '#34396d',
                            900: '#212457',
                            950: '#000080'
                        },
                        'gold': {
                            50: '#fefdf5',
                            100: '#fdfbeb',
                            200: '#fbf7d7',
                            300: '#f9f3c3',
                            400: '#f7efaf',
                            500: '#f5eb9b',
                            600: '#d4af37',
                            700: '#b8942d',
                            800: '#9c7a24',
                            900: '#80601a',
                            950: '#d4af37'
                        },
                        'ivory': {
                            50: '#ffffff',
                            100: '#fffff0',
                            200: '#fffef0',
                            300: '#fffde0',
                            400: '#fffcd0',
                            500: '#fffbc0',
                            600: '#f5f5dc',
                            700: '#e8e8cd',
                            800: '#dbdbbd',
                            900: '#cecead',
                            950: '#fffff0'
                        },
                        'dustyrose': {
                            50: '#fdf2f2',
                            100: '#fce8e8',
                            200: '#f9d5d5',
                            300: '#f6c2c2',
                            400: '#f3afaf',
                            500: '#f09c9c',
                            600: '#e17171',
                            700: '#d25555',
                            800: '#c33939',
                            900: '#b41d1d',
                            950: '#800000'
                        }
                    }
                }
            }
        }
    </script>
</head>
<body class="font-montserrat bg-ivory-950 antialiased">
    <!-- Header Navigation -->
    <%- include('../partials/header') %>

    <!-- Main Content -->
    <main role="main">
        <%- body %>
    </main>

    <!-- Footer -->
    <%- include('../partials/footer') %>

    <!-- Lightbox Modal (if needed) -->
    <%- include('../partials/lightbox') %>

    <!-- Load optimized JavaScript -->
    <script src="/js/<%= process.env.NODE_ENV === 'production' ? 'main.min.js' : 'main.js' %>"></script>
    
    <!-- Additional Scripts (if provided) -->
    <% if (typeof scripts !== 'undefined') { %>
        <% scripts.forEach(function(script) { %>
            <script src="<%= script %>"></script>
        <% }); %>
    <% } %>
</body>
</html>